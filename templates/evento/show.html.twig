{% extends 'base.html.twig' %}

{% block title %}{{evento.titulo}} | Síntesis{% endblock %}
{% block css %}
<link rel="stylesheet" href="{{ asset('css/estilos-evento.css') }}">{% endblock %}

{% block contenido %}
<div class="row ">
    <div class="col-7">
        <img src="https://www.teatrobellasartes.es/wp-content/uploads/2018/08/eventos-1200x540.jpg"
            class="img-fluid rounded" alt="" srcset="">
        <p class="p-1 text-danger mt-3 "><strong>DESCRIPCIÓN</strong></p>
        <p class="p-1 descripcion-evento">{{evento.descripcion}}</p>

    </div>
    <div class="bg-light columna-evento col-5 pl-3">

        <h1 class="titulo-evento">{{evento.titulo}}</h1>

        <p class="text-danger"><strong>¿CUÁNDO?</strong></p>


        <p>FECHA: {{ evento.fechaInicio|fecha|upper}} {{evento.fechaFin ? ' - ' ~ evento.fechaFin|fecha|upper : ''}}</p>
        <p>HORA: {{ evento.hora|date('H:i \\H')}}</p>

        <p class="text-danger mt-3"><strong>¿DÓNDE?</strong></p>
        <p>LUGAR: {{ evento.ubicacion|upper}}</p>

        <p class="text-danger mt-3"><strong>¿CUÁNTO?</strong></p>
        <p>PRECIO: {{ evento.precio == 0 ? 'Gratis' : evento.precio ~'€'}}</p>

        {% if evento.web %}
        <p class="mt-3"><strong class="text-danger">WEB: </strong><a class="text-muted" href="{{evento.web}}"
                target="_blank">{{evento.web}}</a></p>
        {% endif %}


        <p class="mt-3">Publicado por <span class="text-muted">{{evento.usuario.alias}}</span> el
            {{evento.fechaPublicacion|date('d/m/Y')}}</p>
        <div class="justify-content-center d-flex mt-5">
            <a class="btn btn-danger mx-auto">SUSCRÍBETE</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% if evento.usuario.id == app.user.id %} <a href="{{path('evento_edit', {'id': evento.id})}}" class="btn btn-primary mx-auto">EDITAR</a>{% endif %}
            {% endif %}
        </div>

    </div>
</div>


{% endblock %}