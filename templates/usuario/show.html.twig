{% extends "usuario/base_usuario.html.twig" %}

{% block title %} {{usuario.alias}} | Síntesis{% endblock %}

{% block contenidoUsuario %}
    <h1>Usuario</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Nombre de usuario</th>
                <td>{{ usuario.alias }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuario.email }}</td>
            </tr>
            <tr>
                <th>Fecha de Nacimiento</th>
                <td>{{usuario.fechaNacimiento|date('d/m/Y')}}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ usuario.descripcion ? usuario.descripcion : '-' }}</td>
            </tr>
            <tr>
                <th>Fecha de Registro</th>
                <td>{{usuario.fechaRegistro|date('d/m/Y - H:i:s')}}</td>
            </tr>
            
          
        </tbody>
    </table>

   
{% endblock %}
