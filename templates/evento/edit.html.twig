{% extends "usuario/base_usuario.html.twig" %}

{% block title %}Editar evento | Síntesis{% endblock %}

{% block contenidoUsuario %}
{% if mensaje is defined and mensaje == 1 %}
<div class="alert alert-success alert-dismissible fade show text-center" role="alert">
    <strong>Evento publicado correctamente. </strong><a href="{{ path('evento_show', {'id': evento.id}) }}" class="alert-link">Click aquí para visualizarlo.</a>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

{% elseif mensaje is defined and mensaje == 2 %}
<div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
    <strong>Ha ocurrido algún error.</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{% endif %}
<div class="justify-content-between d-flex">
<h1>Editar Evento</h1>
<span class="mr-4">
    

    <span data-toggle="modal" data-target="#modalDelete" class="my-auto" style="cursor: pointer">
        <input class="btn btn-danger" type="button" value="Eliminar Evento">
    </span>

    <!-- Modal Delete Event-->
    <div class="modal" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="modalDeleteTitle"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="modalDeleteTitle">Eliminar Evento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <p>¿Está seguro de querer eliminar esta publicación?</p>
                    <div class="justify-content-center d-flex mt-2">
                        <form method="post" action="{{ path('evento_delete', {'id': evento.id}) }}" class="mr-2">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evento.id) }}">
                            <button class="btn btn-danger">Eliminar</button>
                        </form>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" aria-label="Close">
                        Cancelar
                    </button></div>
                </div>
                
            </div>
        </div>
    </div>

</span>
</div>
{{ include('evento/_form.html.twig', {'button_label': 'Actualizar datos'}) }}



{% endblock %}