            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ usuario.descripcion }}</td>
            </tr>
            <tr>
                <th>FechaRegistro</th>
                <td>{{ usuario.fechaRegistro ? usuario.fechaRegistro|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rol</th>
                <td>{{ usuario.rol ? 'Yes' : 'No' }}</td>
            </tr>
          
        </tbody>
    </table>

   

    <a href="{{ path('usuario_edit', {'id': usuario.id}) }}">edit</a>

