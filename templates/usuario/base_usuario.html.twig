{% extends 'base.html.twig' %}
{% block title %}Hello Usuario{% endblock %}

{% block contenido %}
<div class="col-12 mt-1 titulo">MENÚ DE USUARIO</div>

<!-- COLUMNA MENÚ -->
<div class="col-11 col-lg-10 contenedorContenido no-gutters">


    <nav class="col-2 bg-light">
        <h5 class="px-3 mb-1 text-muted">
            {{app.user.alias}}
        </h5>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#"> <i class="fas fa-user-edit fa-lg mr-1"></i> Datos de usuario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-user-circle fa-lg mr-1"></i> Perfil público</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-calendar-minus fa-lg mr-1"></i> Eventos
                    publicados</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-calendar-check fa-lg mr-1"></i> Suscripciones</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('evento_new')}}"><i class="fas fa-plus-circle fa-lg mr-1" aria-hidden="true"></i>
                    Publicar evento</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('app_logout')}}"><i class="fas fa-plus-circle fa-lg mr-1" aria-hidden="true"></i>
                    Cerrar Sesión</a>
            </li>



        </ul>

        <h5 class="px-3 mt-4 mb-1 text-muted">
            Menú de administrador
        </h5>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-calendar-times fa-lg"></i> Eventos reportados</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-calendar-alt fa-lg"></i> Eventos activos</a>
            </li>

        </ul>

    </nav>

    <div role="main" class="col-5 ">
        
        {% block contenidoUsuario %}{% endblock %}


    </div>


</div>
{% endblock %}