{% extends "usuario/base_usuario.html.twig" %}

{% block title %}Suscripciones | Síntesis{% endblock %}

{% block contenidoUsuario %}
<h1>Suscripciones</h1>

<table class="table table-striped table-hover text-center">

    <thead>
        <tr>
            <th colspan="7">
                PRÓXIMOS EVENTOS
            </th>
        </tr>

        <tr>
            <th>Título</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Ubicación</th>
            <th>Precio</th>


            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for evento in proximos %}
        <tr>
            <td class="align-middle">{{ evento.titulo }}</td>
            <td class="align-middle">{{ evento.fechaInicio|date('d-m-Y') }}</td>
            <td class="align-middle">{{ evento.hora|date('H:i') }}</td>
            <td class="align-middle">{{ evento.ubicacion }}</td>
            <td class="align-middle">{{ evento.precio ? evento.precio/100 ~ '€' : '0€' }}</td>

            <td class="align-middle">
                <a href="{{ path('evento_show', {'id': evento.id}) }}"><i class="fas fa-eye fa-lg"></i></a>&nbsp;
                <a href="{{ path('suscripcion_remove', {'eventoID': evento.id, 'originPath': 'suscrip'}) }}"><i class="fas fa-trash-alt fa-lg"></i></a>

            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7">No hay suscripciones todavía</td>
        </tr>
        {% endfor %}
    </tbody>
    <tr>
        <td colspan="7" class="bg-white"></td>
    </tr>

    <thead>
        <tr>
            <th colspan="7">
                EVENTOS PASADOS
            </th>
        </tr>

    </thead>
    <tbody>
        {% for evento in pasados %}
        <tr>
            <td class="align-middle">{{ evento.titulo }}</td>
            <td class="align-middle">{{ evento.fechaInicio|date('d-m-Y') }}</td>
            <td class="align-middle">{{ evento.hora|date('H:i') }}</td>
            <td class="align-middle">{{ evento.ubicacion }}</td>
            <td class="align-middle">{{ evento.precio ? evento.precio/100 ~ '€' : '0€' }}</td>

            <td class="align-middle">
                <a href="{{ path('evento_show', {'id': evento.id}) }}"><i class="fas fa-eye fa-lg"></i></a>&nbsp;

            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">No hay suscripciones todavía</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}