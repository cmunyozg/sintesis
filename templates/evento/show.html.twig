{% extends 'base.html.twig' %}

{% block title %}Evento{% endblock %}

{% block contenido %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ evento.titulo }}</td>
            </tr>
            <tr>
                <th>FechaInicio</th>
                <td>{{ evento.fechaInicio ? evento.fechaInicio|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FechaFin</th>
                <td>{{ evento.fechaFin ? evento.fechaFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ evento.hora ? evento.hora|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ubicacion</th>
                <td>{{ evento.ubicacion }}</td>
            </tr>
            <tr>
                <th>Coordenadas</th>
                <td>{{ evento.coordenadas }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ evento.precio }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ evento.descripcion }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ evento.imagen }}</td>
            </tr>
            <tr>
                <th>Web</th>
                <td>{{ evento.web }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ evento.visible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Bloqueado</th>
                <td>{{ evento.bloqueado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MensajeModeracion</th>
                <td>{{ evento.mensajeModeracion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evento_index') }}">back to list</a>

    <a href="{{ path('evento_edit', {'id': evento.id}) }}">edit</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
